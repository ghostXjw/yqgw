@import 'basic.styl'

.y-header-com
  background url('../image/topban.png')  no-repeat
  width 100%
  background-size cover
  height 670px
.intro-header
  position relative
  >.header
    >.cont
      margin-top 70px
      >div
        display inline-block
        font-size 0
        vertical-align bottom
        &.video
          width 700px
          height 370px
          background #000
        &.intro-info
          width 442px
          height 357px
          box-sizing border-box
          position relative
          color #ffffff
          margin-left 50px
          img:last-child
            position absolute
            right 0
            top 0
          p.tiltle
            font-size 30px
            position absolute
            top -15px
            margin 0
            padding 0
            width 390px
            background transparent
            opacity 1
            left 56px
          p:nth-of-type(2)
            font-size 18px
            line-height 32px
            padding 27px 55px
            position absolute
            top 0
            text-indent 2em
.prt-bg
  width 920px
  margin 0 140px
  font-size 0
  margin-bottom 40px
  margin-top 40px
  >img
    display inline-block
    width 251px
    vertical-align middle
  >p
    display inline-block
    vertical-align middle
    width 500px
    line-height 46px
    font-size 26px
    color #38408b
    &:nth-child(1)
      margin-right 100px
    &:nth-child(2)
      margin-left 100px
      text-align right
.prt-bg.part
  >p
    margin-left 50px
    width 552px

.y-intro-data
  margin-top 38px
.bs-connec-list
  width 775px
  margin 0 225px
  margin-top 70px
  label
    width 318px
    display inline-block
    vertical-align top
    font-size 0
    img
      margin-bottom 80px
    &:nth-of-type(odd)
      margin-right 135px
.y-fun
  font-size 0
  margin-top 60px
  padding 0 8px
  >.fun-item
    width 572px
    height 120px
    display inline-block
    margin-bottom 40px
    >div
      display inline-block
      vertical-align top
      color #38408b
      &.fun-item-left
        display inline-block
        vertical-align top
        margin-right 35px
        >p.title
          font-size 30px
        >p.info
          font-size 14px
          line-height 26px
          
      &.fun-item-right
          display inline-block
          vertical-align top
        >p.title
            font-size 30px
        >p.info
          font-size 14px
          line-height 26px
          margin-top 25px
    &:nth-child(odd)
      margin-right 40px
      .fun-item-left
        width 387px
        text-align right
    &:nth-child(even)
      .fun-item-right
        width 387px
        text-align left

.y-warn
  width 942px
  margin 0 129px
  margin-top 78px
  margin-bottom 100px
  font-size 0
  .y-warn-item
    display inline-block
    margin-top 78px
    width 130px
    margin-right 139px
    &:last-child
      margin-right 0
    p
      font-size 16px
      text-align center
      margin-top 30px
      color #38408b


