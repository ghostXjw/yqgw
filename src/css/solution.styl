@import 'intro.styl'


.y-cont
  height 670px
.y-type
  padding-top 40px
  .y-type-tab
    width 614px
    height 80px
    box-sizing border-box
    margin 0 293px
    line-height 80px
    font-size 0
    border-bottom 1px solid #cccccc
    li
      width 307px
      display inline-block
      height 80px
      box-sizing border-box
      a
        width 200px
        display inline-block
        font-size 40px
        height 80px
        box-sizing border-box
        margin-left 28px
        color #cccccc
        text-align center
        &.active
          color #38408b
          border-bottom 3px solid #38408b
      &:last-child
        text-align right
        padding-right 28px
          

  .y-type-cont
    .y-type-item
      >.title
        font-size 18px
        color #38408b
        text-align center
        margin-top 40px
        margin-bottom 25px
      >p
        text-indent 2em
        font-size 14px
        color #38408b
        line-height 24px
        font-weight 600
        padding 0 100px
  .y-plan
    margin-top 40px
    padding 0 190px
    >.y-plan-item
      img
        margin-right 10px
      ul
        margin-top 35px
        text-indent 0
        li
          font-size 0
          width 125px
          display inline-block
          margin-right 45px
          text-align left
          >img
            display inline-block
            width 30px
            vertical-align middle
          p
            font-size 14px
            color #a1a1a1
            display inline-block
            vertical-align middle
            width 85px
            line-height 24px
          &:last-child
            margin-right 0
          &:first-child
            >img
              width 19px
    .title 
      text-align center
      color #38408b
      text-indent -22px
      font-size 22px
      img
        margin-right 10px
    .y-plan-item2  
      text-align center
      font-size 14px
      margin-top 55px
      >.y-list-title
        color #38408b
        margin-top 35px
        margin-bottom 25px
      p
        line-height 24px
        color #a1a1a1
    .y-plan-item3
      padding-bottom 80px
      margin-top 55px
      ul
        margin-top 35px
        font-size 0
        li
          display inline-block
          width 380px
          vertical-align top
          .item-t
            color #38408b
            font-size 14px
          p
            margin-top 15px
            font-size 14px
            color #a1a1a1
            line-height 24px
            min-height 130px
          &:nth-child(odd)
            text-align right
            margin-right 55px


    